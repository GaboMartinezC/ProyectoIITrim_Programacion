@model ET.DTO.RAM_DTO
@section scripts 
{
    <script>
        const SoloNumeros = (evt) => {
            if (window.event)
                keynum = evt.keyCode;
            else
                keynum = evt.which;
            if (keynum > 47 && keynum < 58 || keynum == 8 || keynum == 13)
                return true;
            else {
                swal("Ha ocurrido un problema", "Ingrese unicamente numeros", "success");
                return false;
            }
        }
    </script>
}
<!--Contenido del modal-->
<div class="row">
    <div class="col-md-4 offset-md-4 col-sm-12 text-center">
        <h1 class="subtitle">Guardar</h1>
    </div>
    <div class="col-md-8"></div>
    <div class="col-md-8 offset-md-2 col-sm-12">
        <form method="post" asp-controller="Ram" asp-action="Create" class="form-control">
            <!--Organizacion de los inputs con columnas nested-->
            <div class="row">
                <div class="col-md-12 p-3">
                    <input asp-for="Descripcion" class="form-control" type="text" placeholder="Descripcion" >
                </div>
                <div class="col-md-12 p-3">
                    <input asp-for="ConsumoEnergia" id="txtConsumo" class="form-control" type="text" placeholder="Consumo (W)" onkeypress="SoloNumeros(event)" onchange="ValidarNumerosNegativos(event,'txtConsumo')">
                </div>
                <div class="col-md-4 offset-md-2 col-sm-12 p-2">
                    <select asp-for="VersionDDR" class="form-control">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
                <div class="col-md-4 col-sm-12 p-2">
                    <select class="form-control" asp-for="Capacidad">
                        <option value="2">2</option>
                        <option value="4">4</option>
                        <option value="6">6</option>
                        <option value="8">8</option>
                        <option value="12">12</option>
                        <option value="16">16</option>
                        <option value="32">32</option>
                        <option value="64">64</option>
                        <option value="128">128</option>
                    </select>
                </div>
                <div class="col-md-4 offset-md-4 col-sm-12 p-2 text-center">
                    <button class="btn btn-outline-dark" type="submit">
                        <span>Guardar &plus;</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>